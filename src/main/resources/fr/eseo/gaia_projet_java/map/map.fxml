<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" prefWidth="800.0" prefHeight="600.0" >
    <children>
        <!-- ImageView pour la carte -->
        <ImageView fx:id="mapView"
                   fitWidth="800.0"
                   fitHeight="600.0"
                   preserveRatio="false"
                   smooth="true"
                   layoutX="0.0"
                   layoutY="0.0"
                   style="-fx-background-color: #000000;" />

        <!-- ImageView pour le personnage -->
        <ImageView fx:id="joueurView"
                   fitWidth="40.0"
                   fitHeight="40.0"
                   preserveRatio="true"
                   smooth="true"
                   layoutX="375.0"
                   layoutY="50.0"
                   style="-fx-background-color: transparent;"/>
    </children>
</AnchorPane>
